
<h2>Search by Title</h2>
<form action="SearchResult" method="post">
    <input type="text" name="Title" class="form-control" maxlength="30" /><br />
    <input type="submit" />
</form>
<br />
<br />
<h2>Search by ID</h2>
<form action="SearchResult" method="post">
    <input type="number" name="ID" class="form-control" min="1" /><br />
    <input type="submit" />
</form>
<br />
<br />

<h2>Search by Genre</h2>
<form action="SearchResult" method="post">
    <select name="Genre">
        <option value="Animation">Animation</option>
        <option value="Horror">Horror</option>
        <option value="Drama">Drama</option>
        <option value="Action">Action</option>
        <option value="Comedy">Comedy</option>
    </select><br /><br />
    <input type="submit" />
</form>
<br /><br />
<div>
    <a asp-action="Index" asp-controller="Movierentals"><button>Cancel</button></a>
</div>