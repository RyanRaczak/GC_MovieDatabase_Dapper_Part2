
@model IEnumerable<Movie>

<h1>Search Results:</h1>
<br />

@if (Model.Count() != 0)
{
    @foreach (var item in Model)
    {
        <ul>
            @item.Title (@item.Year)&nbsp &nbsp | &nbsp &nbsp
            <a asp-action="Details" asp-route-id="@item.ID" asp-controller="Movierentals">Details</a>&nbsp &nbsp | &nbsp &nbsp
            <a asp-action="Edit" asp-route-id="@item.ID" asp-controller="Movierentals">Edit</a>&nbsp &nbsp | &nbsp &nbsp
            <a asp-action="Delete" asp-route-id="@item.ID" asp-controller="Movierentals">Delete</a>
        </ul>
    }  }
else
{
    <h4>0 movies found</h4>
}


<br />
<div>
    <a asp-action="Search" asp-controller="Movierentals"><button>Search</button></a>&nbsp&nbsp&nbsp
    <a asp-action="Index" asp-controller="Movierentals"><button>Back</button></a>
</div>



